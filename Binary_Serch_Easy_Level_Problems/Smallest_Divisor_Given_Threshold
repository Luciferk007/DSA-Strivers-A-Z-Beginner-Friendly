#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int findsmallestdivisor(vector<int>arr,int limit)
{
  int start = 1;
  int end = *max_element(arr.begin(),arr.end());
  int result=0;
  while(start <= end)
  {
    int sum =0;
    int mid = (start+end)/2;
    
    for(int i=0; i<arr.size(); i++)
    {
      sum += ceil((double)arr[i]/mid);
    }
    if(sum <= limit)
    {
      result = mid;
      end = mid -1;
    }
    else if(sum > limit)
    {
      start = mid+1;
    }
  }
  return result;
}


int main()
{
  vector<int>arr = {1,2,3,4,5};
  int limit = 8;
  cout<<findsmallestdivisor(arr,limit);
}